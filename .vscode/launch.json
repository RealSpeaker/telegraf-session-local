  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "Example",
    "program": "${workspaceRoot}/examples/simple.js",
    "env": {
      "BOT_TOKEN": "<YOUR_BOT_TOKEN>",
      "DEBUG": "telegraf:*"
    },
    "console": "integratedTerminal"
  },
  {
    "type": "node",
    "request": "launch",
    "name": "Tests",
    "runtimeExecutable": "npm",
    "runtimeArgs": [
      "run",
      "test"
    ],
    "console": "integratedTerminal",
    "env": {
      "DEBUG": "telegraf:session-local:test"
    },
    "port": 9229
  }]
}
